{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    // "forceConsistentCasingInFileNames": true,
    // "resolveJsonModule": true
  },
    "paths": {
      "@src/*": ["./src/*"],
      "@infra/*": ["./src/infra/*"],
      "@repo/*": ["./src/repo/*"],
      "@utils/*": ["./src/utils/*"],
      // "@routes/*": ["./src/routes/*"],
      // "@controllers/*": ["./src/controllers/*"],
    },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "data"
  ]
}